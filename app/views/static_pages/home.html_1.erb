<% if signed_in? %>
    <div class="row">
      <aside class="span4">
        <section>
          <%= render 'shared/user_info' %>
        </section>
        <section>
          <%= render 'shared/following_stats' %>
        </section>
        <section>
          <%= render 'shared/ideas_form' %>
        </section>
      </aside>
      <div class="span8">
        <h3>Ideas Feed</h3>
        <%= render 'shared/feed' %>
      </div>
    </div>
<% else %>
    <div class="center hero-unit">
      <h1>Welcome to Empowler</h1>

      <h2>
        Sign Up and start sharing your ideas
      </h2>

      <%= link_to "Sign up now!", signup_path,
                  class: "btn btn-large btn-primary" %>
    </div>

    <%= link_to image_tag("LogoThumb.jpg", alt: "Empowler"), '#' %>
<% end %> 